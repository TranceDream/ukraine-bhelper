<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.byb.userservice.Dao.RoleDao">

    <resultMap id="RoleVo" type="com.byb.userservice.Vo.RoleVo">
        <id property="roleId" column="ROLE_ID"/>
        <result property="roleName" column="ROLE_NAME"/>
        <result property="createTime" column="createTime"/>
        <result property="deleteMark" column="DELETE_MARK"/>
    </resultMap>

    <select id="countRoleList" parameterType="java.util.Map" resultType="java.lang.Integer">
        select count(1) from
        DICT_ROLE
        <where>
            <if test="roleId!=null and roleId!=''">
                ROLE_ID = #{roleId}
            </if>

            <if test="roleName!=null and roleName!=''">
                AND ROLE_NAME = #{roleName}
            </if>

            <choose>
                <when test="deleteMark !=null and deleteMark!=''">
                    AND DELETE_MARK = #{deleteMark}
                </when>

                <otherwise>
                    AND DELETE_MARK = 'NO'
                </otherwise>
            </choose>

            <choose>
                <when test="orderText != null and orderText != ''">
                    order by ${orderText}
                </when>

                <otherwise>
                    order by ROLE_ID desc
                </otherwise>
            </choose>
        </where>
    </select>

    <select id="selectRoleList" parameterType="java.util.Map" resultMap="RoleVo">
        select * from
        (
        select * from
        DICT_ROLE
        <where>
            <if test="roleId!=null and roleId!=''">
                ROLE_ID = #{roleId}
            </if>

            <if test="roleName!=null and roleName!=''">
                AND ROLE_NAME = #{roleName}
            </if>

            <choose>
                <when test="deleteMark !=null and deleteMark!=''">
                    AND DELETE_MARK = #{deleteMark}
                </when>

                <otherwise>
                    AND DELETE_MARK = 'NO'
                </otherwise>
            </choose>

            <choose>
                <when test="orderText != null and orderText != ''">
                    order by ${orderText}
                </when>

                <otherwise>
                    order by ROLE_ID desc
                </otherwise>
            </choose>
        </where>
        ) m  limit #{start}, #{size}
    </select>
</mapper>